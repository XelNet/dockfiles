server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /git;

    location / {
      index /gitweb/gitweb.cgi;
      include fastcgi_params;
      gzip off;
      fastcgi_param   GITWEB_CONFIG  /etc/gitweb.conf;
      if ($uri ~ "/gitweb.cgi") {
          fastcgi_pass    unix:/run/fcgiwrap.gitweb.sock-1;
      }
    }
}

